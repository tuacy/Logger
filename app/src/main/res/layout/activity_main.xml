<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_log_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印 normal"/>

        <Button
            android:id="@+id/button_log_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印 intent"/>

        <Button
            android:id="@+id/button_log_bundle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印 bundle"/>

        <Button
            android:id="@+id/button_log_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印 map"/>

        <Button
            android:id="@+id/button_log_reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印 reference"/>

        <Button
            android:id="@+id/button_log_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印 collection"/>

        <Button
            android:id="@+id/button_log_throwable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印 Throwable"/>

    </LinearLayout>
</ScrollView>
